<% if !defined? show_game then show_game = false end %>
<table>
  <tr>
    <th>ID</th>
    <% if show_game %>
      <th>Game</th>
    <% end %>
    <th>Description</th>
    <th>Status</th>
  </tr>

  <% issues.each do |issue| %>
    <tr class="issue">
      <td><%= link_to "##{issue.id}", [issue.game, issue] %></td>
      <% if show_game %>
        <td><%= issue.game.name %></td>
      <% end %>
      <td><%= issue.description %></td>
      <td><%= label_for Issue::STATUSES, issue.status %></td>
    </tr>
  <% end %>
</table>