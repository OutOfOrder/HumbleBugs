<%= form_for(@developer, :html => {:class => :new_edit_form}) do |f| %>
  <fieldset>
    <legend><%= title %></legend>
    <% if @developer.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@developer.errors.count, "error") %> prohibited this developer from being saved:</h2>

        <ul>
          <% @developer.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= f.label :name %>
      <br/>
      <%= f.text_field :name %>
    </div>
    <div class="field">
      <%= f.label :website %>
      <br/>
      <%= f.text_field :website %>
    </div>
    <div class="field">
      <%= f.label :time_zone %>
      <br/>
      <%= f.time_zone_select :time_zone, ActiveSupport::TimeZone.us_zones, :prompt => '- Select Timezone -' %>
    </div>
    <% permitted_to? :read_address, @developer do %>
      <div class="field">
        <%= f.label :address %>
        <br/>
        <%= f.text_area :address %>
      </div>
      <div class="field">
        <%= f.label :contact_information %>
        <br/>
        <%= f.text_area :contact_information %>
      </div>
    <% end %>
    <div class="actions">
      <%= f.submit %>
    </div>
  </fieldset>
<% end %>
