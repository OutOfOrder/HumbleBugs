<h1>Listing users</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th>Roles</th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= link_to user.name, user %></td>
    <td><%= user.email %></td>
    <td><%= role_titles(user.role_symbols).join(', ') %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New User', new_user_path if permitted_to? :create %>
