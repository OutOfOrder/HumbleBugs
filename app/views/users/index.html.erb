<fieldset>
  <legend>Users</legend>
  <table>
    <colgroup><col width="20px"/></colgroup>
    <thead>
    <tr>
      <th></th>
      <th>Name</th>
      <th>Email</th>
      <th>Roles</th>
      <th></th>
      <th></th>
    </tr>
    </thead>

    <% @users.each do |user| %>
        <tr>
          <td><%= gravatar_tag user, size: 30 %></td>
          <td><%= link_to user.name, user %></td>
          <td><%= user.email %></td>
          <td><%= role_titles(user.role_symbols).join(', ') %></td>
        </tr>
    <% end %>
  </table>
</fieldset>
