<fieldset>
  <legend>Port details</legend>
  <p>
    <b>Game:</b>
    <%= link_to @port.game.name, @port.game %>
  </p>

  <p>
    <b>Developer:</b>
    <%= @port.developer.try(:name) || '(Unassigned)' %>
  </p>

  <p>
    <b>State:</b>
    <%= label_for Types::Port::STATES, @port.state %>
  </p>

  <p>
    <b>Platforms:</b>
    <%= platform_list @port.platforms %>
  </p>


  <%= link_to 'Edit', edit_game_port_path(@port.game, @port) if permitted_to? :edit %> |
  <%= link_to 'Back', game_ports_path(@port.game) %>
</fieldset>