<!DOCTYPE html>
<html>
<head>
  <title>HumbleBugs</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
<div id="container">
  <header>
    <div id="logo">
      <h1>HumbleBugs</h1>
    </div>
    <div id="user-nav">
      <div>
        <% if current_user %>
            Logged in as <%= current_user.email %>.
            <%= link_to "Log out", logout_path %>
        <% else %>
            <%= link_to "Sign up", signup_path %> or
            <%= link_to "log in", login_path %>
        <% end %>
      </div>
    </div>
    
    <div id="app-nav">
      <ul>
        <li class="<%= select_if :controller => :dashboard %>"><%= link_to 'Dashboard', root_path %></li>
        <li class="<%= select_if :controller => :bundles %>"><%= link_to 'Bundles', bundles_path %></li>
        <li class="<%= select_if :controller => :games %>"><%= link_to 'Games', games_path %></li>
      </ul>
    </div>

    <div id="flash">
      <% flash.each do |name, msg| %>
          <%= content_tag :div, msg, :class => "flash #{name}" %>
      <% end %>
    </div>
  </header>

  <section id="content">
    <%= yield %>
  </section>

  <footer>

  </footer>
</div>
</body>
</html>
