<%= form_for(@bundle, :html=>{ :class => :new_edit_form}) do |f| %>
  <fieldset>
    <legend><%= title %></legend>
    <% if @bundle.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@bundle.errors.count, "error") %> prohibited this bundle from being saved:</h2>

        <ul>
          <% @bundle.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= f.label :name %>
      <br/>
      <%= f.text_field :name %>
    </div>
    <div class="field">
      <%= f.label :target_date %>
      <br/>
      <%= f.datetime_select :target_date, :include_blank => true %>
    </div>
    <div class="field">
      <%= f.label :description %>
      <br/>
      <%= f.text_area :description %>
    </div>
    <div class="field">
      <%= f.label :state %>
      <br/>
      <%= f.select :state, Types::Bundle::STATES %>
    </div>
    <div class="actions">
      <%= f.submit disable_with: 'Saving...' %>
    </div>
  </fieldset>
<% end %>
