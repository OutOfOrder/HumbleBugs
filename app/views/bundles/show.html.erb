<fieldset class="bundle_controller">
  <legend>Bundle details</legend>
  <div class="details">
    <p>
      <b>Name:</b>
      <%= @bundle.name %>
    </p>

    <p>
      <b>State:</b>
      <%= label_for Bundle::STATES, @bundle.state %>
    </p>

    <p class="target">
      <b>Target date:</b>
      <%= timeago @bundle.target_date if @bundle.target_date.present?%>
    </p>

    <p class="description">
      <b>Description:</b>
      <%= @bundle.description %>
    </p>
  </div>

  <p class="actions">
    <%= link_to 'Edit', edit_bundle_path(@bundle) if permitted_to? :edit %> |
    <%= link_to 'Back', bundles_path %>
  </p>
</fieldset>
<fieldset>
  <legend>Games</legend>
  <%= render 'games/games', :games => @bundle.games %>
  <%= link_to 'New game', new_bundle_game_path(@bundle) if permitted_to? :create, @bundle.games %>
</fieldset>
<fieldset>
  <legend>Issues</legend>
  <%= render 'issues/issues', :issues => @bundle.issues, :show_game => true %>
</fieldset>
