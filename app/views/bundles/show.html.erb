<fieldset>
  <legend>Bundle details</legend>
  <p>
    <b>Name:</b>
    <%= @bundle.name %>
  </p>

  <p>
    <b>Target date:</b>
    <%= @bundle.target_date %>
  </p>

  <p>
    <b>Description:</b>
    <%= @bundle.description %>
  </p>

  <p>
    <b>State:</b>
    <%= label_for Bundle::STATES, @bundle.state %>
  </p>

  <fieldset>
    <legend>Games</legend>
    <%= render'games/games', :games => @bundle.games %>
  </fieldset>

  <fieldset>
    <legend>Issues</legend>
    <%= render'issues/issues', :issues => @bundle.issues %>
  </fieldset>

  <%= link_to 'Edit', edit_bundle_path(@bundle) %> |
  <%= link_to 'Back', bundles_path %>
</fieldset>