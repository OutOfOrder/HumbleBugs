<%= form_for([@game, @release], :html=>{ :class => :new_edit_form}) do |f| %>
    <fieldset>
      <legend><%= title %></legend>
      <% if @release.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@release.errors.count, "error") %> prohibited this release from being saved:</h2>

            <ul>
              <% @release.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
      <% end %>

      <div class="field">
        <%= f.label :notes %>
        <br/>
        <%= f.text_area :notes %>
      </div>
      <div class="field">
        <%= f.label :checksum %>
        <br/>
        <%= f.text_field :checksum %>
      </div>
      <div class="field">
        <%= f.label :version %>
        <br/>
        <%= f.text_field :version %>
      </div>
      <div class="field">
        <%= f.label :url %>
        <br/>
        <%= f.text_field :url %>
      </div>
      <div class="field">
        <%= f.label :status %>
        <br/>
        <%= f.select :status, Release::STATUSES %>
      </div>
      <div class="field">
        <%=  f.label :platform_list %>
        <br/>
        <%= f.text_field :platform_list, :class => 'tags', :data => { :tags_input => {
                onlyautocomplete: true,
                autocomplete: { source: complete_predefined_tags_path(:platforms, :json), minLength: 0, autoFocus: true }
        } } %>
      </div>
      <div class="actions">
        <%= f.submit disable_with: 'Saving...' %>
      </div>
    </fieldset>
<% end %>
